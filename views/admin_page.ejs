<% layout('boilerplate_admin') %>

<div class="container mt-5">
  <div class="row mt-5 justify-content-center">
    <div class="col-12 col-md-6 text-center ">
      <h1 class="text-start">Dashboard</h1>
      <% if(results[0].is_admin === 1 ) {%>
      <div class="d-flex mt-5 manage p-2">
        <h4 class="">Admins</h4>
        <form class="ms-auto" action="/admin_777/new">
          <small class="gray">Total: <%= results[0].created_adm %></small>
          <button type="submit" class="btn ms-auto"><i class="bi bi-pencil white"></i></button>
        </form>
      </div>
      <% } %> 
      <div class="d-flex mt-5 manage p-2">
        <h4 class="position-relative">Shares
          <% if(results[0].new_posts > 0) {%>
          <span class="position-absolute top-0 ms-5 translate-middle badge rounded-pill bg-info">
            <%= results[0].new_posts %> new
          </span>
          <% } %>
        </h4>
        <form class="ms-auto" action="/admin_777/shares">
          <small class="gray">Shown: <%= results[0].displayed_posts %></small>
          <button type="submit" class="btn ms-auto"><i class="bi bi-pencil white"></i></button>
        </form>
      </div>
      <div class="d-flex mt-5 manage p-2">
        <h4 class="position-relative">Comments
          <% if(results[0].new_com > 0) {%>
          <span class="position-absolute top-0 ms-5 translate-middle badge rounded-pill bg-info">
            <%= results[0].new_com %> new
          </span>
          <% } %>
        </h4>
        <form class="ms-auto" action="/admin_777/comments">
          <small class="gray">Shown: <%= results[0].displayed_com %></small>
          <button type="submit" class="btn ms-auto"><i class="bi bi-pencil white"></i></button>
        </form>
      </div>
      <form action="/logout/admin_777" method="POST">
        <button class="btn btn-danger mt-5">Logout</button>
      </form>
    </div>
  </div>
</div>